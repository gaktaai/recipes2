<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Effect</th>
            <th>Ingredients</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>   
    </thead>
    <tbody>
        {{#each potions}}
        <tr>
            <td>{{name}}</td>
            <td>{{effect}}</td>
            <td>{{ingredients}}</td>
            <td>{{link-to "View" "potions.view" this class="btn btn-default btn-sm"}}</td>
            <td>{{link-to "Edit" "potions.edit" this class="btn btn-default btn-sm"}}</td>
            <td><button {{action "deletePotion" this}} class="btn btn-danger btn-sm">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>